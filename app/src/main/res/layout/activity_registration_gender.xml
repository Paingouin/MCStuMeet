<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_gender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cogo.mcstumeet.registration.RegistrationGender">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1">

        <ImageView
            android:layout_height="146dp"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView5">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textStyleRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender_text"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:text="@string/gender_text"/>

            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="15dp"
                android:id="@+id/female_button"
                android:text="@string/gender_female"
                android:onClick="passData" />

            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:id="@+id/male_button"
                android:text="@string/gender_male"
                android:onClick="passData"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/or_text"
                android:textAlignment="center"
                android:textSize="9pt"/>
            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_action_button"
                android:textColor="#FFFFFF"
                android:text="@string/loginStuMeet"
                android:id="@+id/signinStuMeet_button"
                android:onClick="singIn"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0.03">

            <ImageView
                android:id="@+id/imageView_fr"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="FRonClick"
                app:srcCompat="@drawable/flag_fr" />

            <ImageView
                android:id="@+id/imageView_de"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="de"
                app:srcCompat="@drawable/flag_de" />

            <ImageView
                android:id="@+id/imageView_en"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:onClick="en"
                app:srcCompat="@drawable/flag_en" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

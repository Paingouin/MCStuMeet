<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_gender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cogo.mcstumeet.RegistrationGender">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="90px"
        android:paddingRight="90px"
        android:layout_marginTop="900px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_text"
            style="@style/textStyleRegistration"
            android:textAlignment="center"
            android:layout_marginBottom="80px"
            android:text="@string/gender_text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:layout_marginBottom="45px"
            style="@style/buttonSize"
            android:layout_below="@+id/gender_text"
            android:id="@+id/male_button"
            android:text="@string/gender_female"
            android:onClick="passData" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            style="@style/buttonSize"
            android:layout_below="@+id/male"
            android:id="@+id/female_button"
            android:text="@string/gender_male"
            android:onClick="passData"/>

    </LinearLayout>
</RelativeLayout>

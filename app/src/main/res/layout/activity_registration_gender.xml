<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_gender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cogo.mcstumeet.RegistrationGender">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="700px">

            <TextView
                style="@style/textStyleRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender_text"
                android:textAlignment="center"
                android:layout_marginBottom="80px"
                android:text="@string/gender_text"/>

            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="45px"
                android:id="@+id/male_button"
                android:text="@string/gender_female"
                android:onClick="passData" />

            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:id="@+id/female_button"
                android:text="@string/gender_male"
                android:onClick="passData"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/or_text"
                android:textAlignment="center"
                android:textSize="9pt"/>
            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@drawable/rounded_action_button"
                android:textColor="#FFFFFF"
                android:text="@string/SigninStuMeet"
                android:id="@+id/signinStuMeet"
                android:onClick="singIn"/>
            <Button
                style="@style/buttonSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:background="@drawable/rounded_action_button"
                android:textColor="#FFFFFF"
                android:text="@string/SigninFB"
                android:id="@+id/signinFb" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

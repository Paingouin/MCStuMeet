<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_interests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cogo.mcstumeet.RegistrationInterests">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="90px"
        android:paddingRight="90px"
        android:layout_marginTop="700px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interests_text"
            style="@style/textStyleRegistration"
            android:textAlignment="center"
            android:layout_marginBottom="80px"
            android:text="@string/interests_text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="45px"
            style="@style/buttonSize"
            android:layout_below="@+id/interests_text"
            android:id="@+id/interests_girl"
            android:text="@string/interests_girl"
            android:onClick="passData"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            style="@style/buttonSize"
            android:layout_below="@+id/interests_text"
            android:id="@+id/interests_guy"
            android:text="@string/interests_guy"
            android:onClick="passData"/>

    </LinearLayout>

</RelativeLayout>
